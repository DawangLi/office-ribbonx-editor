<controls:DialogControl x:Class="OfficeRibbonXEditor.Views.CallbackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sn="http://scintillanet.codeplex.com"
        xmlns:extensions="clr-namespace:OfficeRibbonXEditor.Extensions"
        xmlns:controls="clr-namespace:OfficeRibbonXEditor.Controls"
        Title="Callbacks Viewer"
        PreferredWidth="800"
        PreferredHeight="600"
        ResizeMode="CanResizeWithGrip"
        SizeToContent="Manual"
        Icon="../Resources/Images/callbacks.png"
        mc:Ignorable="d">
    <Grid>
        
        <sn:ScintillaWPF
            x:Name="Editor"
            HorizontalAlignment="Stretch"
            FontFamily="Consolas"
            FontSize="{extensions:SettingBinding EditorFontSize}"
            DataContext="{Binding SelectedItem, ElementName=DocumentView}"/>

    </Grid>
</controls:DialogControl>
